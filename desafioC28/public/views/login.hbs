<div class="container my-5">
    <div class="jumbotron">
        <h1>INICIO DE SESIÓN</h1>
        <br>
        <form class="form" action="/login" method="post" role="form" autocomplete="off">
            <div class="form-group">
                <label for="username">E-mail:</label>
                <input id="username" name='username' placeholder="E-Mail" class="form-control" type="text" required>
            </div>

            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input id="password" name='password' placeholder="password" class="form-control" type="password" required>
            </div>

            <div class="form-group">
                <input class="btn btn-success my-3" type="submit" value="Login">
            </div>
        </form>
        <hr>
        <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/register'">Ir a Registro</button>
        </div>
    </div>
</div>